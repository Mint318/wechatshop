/* pages/home/home .wxss */


.swp{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.swp_a{
    width: 98%;
    height: 320rpx;
    margin-top: 15rpx;

}
.swp_img{
    width: 100%;
    height: 320rpx;
    border-radius: 10rpx;
}
.fun{
    width: 98%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 40rpx;

}
.fun_left{
    width: 49%;
    height: 400rpx;
    
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
    
}
.fun_1{
    width: 98%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-radius: 10rpx;

}
.fun_title{
    width: 98%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-top: 30rpx;
}
.fun_right{
    width: 49%;
    height: 400rpx;
    display: flex;
    
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-shadow: 5rpx 5rpx 10rpx #888888;
}
.right_1{
    width: 100%;
    height:198rpx ;
    
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
}
.right_2{
    width: 100%;
    height:198rpx ;

    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
}

/* 商品 */

.pro{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 0rpx;

}

.pro_all{
    width: 98%;
    height: 400rpx;
    display: flex;
    flex-direction: row;
    align-items:center ;
    justify-content: space-between;
    margin-top: 20rpx;
    flex-wrap: wrap;
 

}

.pro_detail{
    width: 43%;
    height: 500rpx;
    padding: 20rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 30rpx;

}
.pro_img{
    width: 100%;
    height: 350rpx;
    border-radius: 10rpx;
}
.pro_name{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    justify-content: flex-start;
    white-space: nowrap;
    overflow: hidden;
   font-size: 30rpx;
   text-overflow: ellipsis;
}

.pro_fun{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}

.grid{
    border: true;
}